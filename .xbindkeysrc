# -------------- INCREASE VOLUME --------------
# Increase volume (internal keyboard)
"pactl set-sink-volume @DEFAULT_SINK@ +1000"
   XF86AudioRaiseVolume

# Increase volume (external keyboard)
"pactl set-sink-volume @DEFAULT_SINK@ +1000"
    m:0x0 + c:123
    XF86AudioRaiseVolume


# -------------- DECREASE VOLUME --------------
# Decrease volume (internal keyboard)
"pactl set-sink-volume @DEFAULT_SINK@ -1000"
   XF86AudioLowerVolume

# Decrease volume (external keyboard)
"pactl set-sink-volume @DEFAULT_SINK@ -1000"
    m:0x0 + c:122
    XF86AudioLowerVolume


# -------------- MUTE VOLUME --------------
# Mute volume (internal keyboard)
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
   XF86AudioMute

# Mute volume (external keyboard)
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
   m:0x0 + c:121
   XF86AudioMute


# -------------- MUTE MICROPHONE --------------
# Mute microphone (internal keyboard)
"pactl set-source-mute @DEFAULT_SOURCE@ toggle"
   XF86AudioMicMute


# -------------- INCREASE BRIGHTNESS --------------
# Increase brightness (internal keyboard)
"xbacklight -inc 10"
    XF86MonBrightnessUp

# Increase brightness (external keyboard)
"xbacklight -inc 10"
    m:0x0 + c:233
    XF86MonBrightnessUp


# -------------- DECREASE BRIGHTNESS --------------
# Decrease brightness (internal keyboard)
"xbacklight -dec 10"
    XF86MonBrightnessDown

# Decrease brightness (external keyboard)
"xbacklight -dec 10"
    m:0x0 + c:232
    XF86MonBrightnessDown

